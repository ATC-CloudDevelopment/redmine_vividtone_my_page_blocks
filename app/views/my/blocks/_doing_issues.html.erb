<%
  current_user_ids = [User.current.id] + User.current.group_ids
  default_issue_status = IssueStatus.find_by_is_default(true)
  issues = Issue.visible.open.find(:all,
    :conditions => ["assigned_to_id in (?) and #{IssueStatus.table_name}.id <> ?", current_user_ids, default_issue_status],
    :include => [:status, :project, :tracker, :priority],
    :order => "#{Issue.table_name}.updated_on desc")
%>


<h3><%= l(:doing_issues) %> (<%= issues.count %>)</h3>

<%= render :partial => 'issues/list_simple', :locals => {:issues => issues[0...30]} %>
